#include<stdio.h>
int main()
{
    int arr[10][10],i,j,n;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("Element -[%d],[%d]: ",i,j);
            scanf("%d",&arr[i][j]);
        }
        
        
    }
    printf("\n");
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            
            printf("%d ",arr[i][j]);
        }
        printf("\n");
        
        
    }
    printf("\n");
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            if(i<=j) // change this condtion to (i<j) to set upper traingular matrix to 0....
            {
                printf("%d ",arr[i][j]);
            }
            else
            {
                printf("0 ");
            }
        }
        printf("\n");
    }
    
    
    
    
    
    
