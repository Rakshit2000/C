//C:

#include<stdio.h>
#define pi 3.14
int main()
{
    float radius,diamter,area;
    scanf("%f",&diamter);
    radius = (float)diamter/2;
    area = pi*radius*radius;
    printf("Area of a circle = %.2f",area);
    return 0;
}








//Python:

from math import pi
diameter = int(input())
radius = diameter/2
area = pi*radius*radius;


print("Area is : " , round(area,2))

