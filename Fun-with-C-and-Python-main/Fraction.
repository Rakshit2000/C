
#include <stdio.h>

int main()
{
    int a,b,c,d,x,y,i,gcd;
    scanf("%d %d %d %d",&a,&b,&c,&d);
    x=(a*d)+(b*c);
    y=(b*d);
    
    for(int i=1;i<=x && i<=y;i++)
    {
        if(x%i==0 && y%i==0)
        {
            gcd=i;
        }
    }

    
    
    printf("%d %d",x/gcd,y/gcd);
    

    return 0;
}
    
