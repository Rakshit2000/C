// 1st method: 
#include <stdio.h>
#include<string.h>
int main()
{
    char str1[50],str2[50];
    int i;
    printf("Enter the string :");
    gets(str1);
    for(i=0;str1[i]!='\0';i++)
    {
        str2[i]=str1[i];
    }
    str2[i]='\0';
    puts(str2);
    
    
    
    
    return 0;
}

// 2nd method
#include <stdio.h>
#include<string.h>
int main()
{
    char str1[50]="Sb moh maya hai";
    char str2[50]=" ";
    puts(str1);
    puts(str2);
    strcpy(str2,str1);
    puts(str2);
    
    
    
    
    return 0;
}
