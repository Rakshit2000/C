#include <stdio.h>
#include<string.h>
int main()
{
    char str[50];
    int count1=0,count2=0,count3=0;
    printf("Enter the string :");
    gets(str);
    for(int i=0;str[i]!='\0';i++)
    {
        if(str[i]>='A' && str[i]<='Z')
            count1++;
        else if(str[i]>='a' && str[i]<='z')
            count2++;
        else if(str[i]>='0' && str[i]<='9')
            count3++;
        else
            break;
            
        
    }
    printf("%d %d %d",count1,count2,count3);
    
    
