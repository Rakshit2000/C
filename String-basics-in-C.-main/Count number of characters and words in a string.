#include <stdio.h>
#include<string.h>
int main()
{
    char str[50];
    int count1=0,count2=0;
    printf("Enter the string :");
    gets(str);
    for(int i=0;str[i]!='\0';i++)
    {
        count1++;
        if(str[i]==' ')
        {
            count2++;
        }
            
        
    }
    printf("Number of characters are: %d\n",count1);
    printf("Number of words are: %d",count2+1);
    
    
    
    return 0;
}
